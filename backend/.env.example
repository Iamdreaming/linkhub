# ============ 应用配置 ============
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# ============ 安全配置 ============
# JWT密钥（生产环境必须修改，至少32字符）
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
# 管理员密码（生产环境必须修改）
ADMIN_PASSWORD=admin123456
# Session超时时间（秒）
SESSION_TIMEOUT=86400

# ============ 数据库配置 ============
DB_PATH=./data/linkhub.db
DB_BACKUP_PATH=./data/backups

# ============ 备份配置 ============
# 是否启用自动备份
BACKUP_ENABLED=true
# 备份时间（Cron表达式：每天凌晨3点）
BACKUP_SCHEDULE=0 3 * * *
# 备份保留天数
BACKUP_RETENTION_DAYS=30

# ============ 限流配置 ============
# API限流时间窗口（毫秒）
RATE_LIMIT_WINDOW_MS=900000
# 时间窗口内最大请求数
RATE_LIMIT_MAX_REQUESTS=100
# 重定向限流（每分钟最大次数）
REDIRECT_RATE_LIMIT_MAX=10

# ============ 日志配置 ============
# 日志级别：error/warn/info/debug
LOG_LEVEL=info
# 日志文件路径
LOG_FILE_PATH=./logs
# 单个日志文件最大大小
LOG_MAX_SIZE=10m
# 保留日志文件数量
LOG_MAX_FILES=7

# ============ CORS配置 ============
# 允许的源（生产环境建议指定具体域名）
CORS_ORIGIN=*
# 是否允许携带凭证
CORS_CREDENTIALS=true

# ============ 二维码配置 ============
# 默认二维码尺寸
QR_DEFAULT_SIZE=300
# 最大二维码尺寸
QR_MAX_SIZE=1000
# 最小二维码尺寸
QR_MIN_SIZE=100